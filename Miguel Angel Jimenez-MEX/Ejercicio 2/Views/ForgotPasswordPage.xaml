<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Ejercicio2.Views.ForgotPasswordPage"
             Title="{ Binding Title }"
             >
    <ContentPage.Content>
        
          <StackLayout Margin="25" Spacing="15">
            
                  <Label x:Name="lblRecuperar" XAlign="Center" Text="Recupera tu contraseña ingresando tu email"></Label>
                  <Entry x:Name="txtRecuperar" Placeholder="Ingresa tu email"></Entry>
            
                  <Label x:Name="lblCodigo" 
                         IsVisible="false" 
                         Text="Ingresa el código enviado a tu correo"></Label>
                  <Entry x:Name="txtCodigo" 
                         IsPassword="true"
                         PlaceholderColor="Green"
                         IsVisible="false" 
                         ></Entry>
        
                  <Button Clicked="Handle_Clicked"
                          BackgroundColor="Green"
                          TextColor="White"
                          Text="Enviar"></Button>
      
                </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
